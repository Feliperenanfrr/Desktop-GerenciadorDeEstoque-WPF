<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Estilo base para botões -->
    <Style TargetType="Button" x:Key="DefaultButtonTheme">
        <Setter Property="Background" Value="#353340"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.4"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#22202f"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Botões coloridos -->
    <Style TargetType="Button" x:Key="GreenButtonTheme" BasedOn="{StaticResource DefaultButtonTheme}">
        <Setter Property="Background" Value="#4CAF50"/>
    </Style>

    <Style TargetType="Button" x:Key="YellowButtonTheme" BasedOn="{StaticResource DefaultButtonTheme}">
        <Setter Property="Background" Value="#FFC107"/>
    </Style>

    <Style TargetType="Button" x:Key="RedButtonTheme" BasedOn="{StaticResource DefaultButtonTheme}">
        <Setter Property="Background" Value="#F44336"/>
    </Style>

    <Style TargetType="Button" x:Key="BlueButtonTheme" BasedOn="{StaticResource DefaultButtonTheme}">
        <Setter Property="Background" Value="#2196F3"/>
    </Style>

</ResourceDictionary>